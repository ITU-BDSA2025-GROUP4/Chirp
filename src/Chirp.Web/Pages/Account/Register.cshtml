@page "/Account/Register"
@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.AspNetCore.Identity.UserManager<Chirp.Core.Entities.Author> userManager
@model Chirp.Razor.Pages.RegisterPageModel


@{
    ViewData["Title"] = "Register";
    Layout = "../Shared/_Layout.cshtml";
}

<!--TODO: add better HTML-->
<!--HTML and css by Dot Net Totorials-->
<!--https://dotnettutorials.net/lesson/register-login-logout-in-asp-net-core-identity/-->
<div>
    <!-- Left: Welcome/Branding Section -->
    <div>
        <h4>Welcome please register</h4>
    </div>
    <!-- Right: Registration Form Section -->
    <div>
        <h5>Create Your Account</h5> 

            <b class="warning">@TempData["message"]</b>

            <form method="post">
                <label for="Username">Username:</label><br>
                <input type="text" id="Username" name="Username" value="@TempData["username"]"><br>
                <label for="Email">Email:</label><br>
                <input type="text" id="Email" name="Email" value="@TempData["email"]"><br>
                <label for="Password">Password:</label><br>
                <input type="password" id="Password" name="Password"><br>
                <label for="ConfirmPassword">Confirm password:</label><br>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword"><br>
                <input type="submit" value="Register" asp-page-handler="Register"/>
            </form>
            <div class="text-center mt-1">
                <span class="text-secondary small">Already have an account?</span>
                <a asp-action="Login" class="ms-1 text-primary text-decoration-none fw-semibold small">Login</a>
            </div>
    </div>
</div>

